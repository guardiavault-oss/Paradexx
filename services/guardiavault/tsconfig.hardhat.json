{
  "extends": "./tsconfig.json",
  "include": [
    "test/**/*.ts",
    "scripts/**/*.ts",
    "hardhat.config.ts",
    "typechain-types/**/*.ts"
  ],
  "exclude": ["node_modules", "build", "dist"],
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2020",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmit": true
  },
  "files": ["./hardhat.config.ts"]
}
