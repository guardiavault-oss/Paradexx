# Environment variables for development
# Copy this file to .env and update with your actual values

# Database Configuration
POSTGRES_URL=postgresql://postgres:password@localhost:5432/elite_mempool
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=elite_mempool
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# Kafka Configuration
KAFKA_BROKERS=localhost:9092

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
JWT_SECRET=your-super-secret-jwt-key-change-in-production
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Blockchain RPC URLs (replace with your actual URLs)
ETHEREUM_RPC_URL=wss://mainnet.infura.io/ws/v3/YOUR_INFURA_PROJECT_ID
ETHEREUM_HTTP_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
POLYGON_RPC_URL=wss://polygon-mainnet.infura.io/ws/v3/YOUR_INFURA_PROJECT_ID
BSC_RPC_URL=wss://bsc-ws-node.nariox.org:443
ARBITRUM_RPC_URL=wss://arb1.arbitrum.io/ws

# Infura Configuration
INFURA_PROJECT_ID=YOUR_INFURA_PROJECT_ID

# MEV Configuration
FLASHBOTS_RPC_URL=https://rpc.flashbots.net
MEV_RELAY_URL=https://relay.flashbots.net

# Bot Configuration
BOT_PRIVATE_KEY=your_private_key_here
BOT_ADDRESS=your_bot_address_here

# Notification Services
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
DISCORD_WEBHOOK_URL=your_discord_webhook_url
SLACK_WEBHOOK_URL=your_slack_webhook_url

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
MAX_WEBSOCKET_CONNECTIONS=1000

# Environment
ENVIRONMENT=development

# ELITE Mempool Service Configuration (Matching config loader patterns)
ELITE_DATABASE_URL=postgresql://postgres:password@localhost:5432/elite_mempool
ELITE_REDIS_URL=redis://localhost:6379
ELITE_KAFKA_BROKERS=localhost:9092
ELITE_API_HOST=0.0.0.0
ELITE_API_PORT=8000

# ELITE Blockchain Explorer APIs (for transaction monitoring and threat detection)
ELITE_ETHERSCAN_API_KEY=YOUR_ETHERSCAN_API_KEY
ELITE_POLYGONSCAN_API_KEY=YOUR_POLYGONSCAN_API_KEY
ELITE_BSCSCAN_API_KEY=YOUR_BSCSCAN_API_KEY
ELITE_ARBISCAN_API_KEY=YOUR_ARBISCAN_API_KEY
ELITE_OPTIMISTIC_ETHERSCAN_API_KEY=YOUR_OPTIMISTIC_ETHERSCAN_API_KEY
ELITE_SNOWTRACE_API_KEY=YOUR_SNOWTRACE_API_KEY

# ELITE AI Services (for enhanced threat detection)
ELITE_ANTHROPIC_API_KEY=sk-ant-api03-YOUR_ANTHROPIC_API_KEY
ELITE_OPENAI_API_KEY=sk-YOUR_OPENAI_API_KEY

# ELITE Market Data (for MEV detection and price analysis)
ELITE_COINGECKO_API_KEY=CG-YOUR_COINGECKO_API_KEY
ELITE_COINMARKETCAP_API_KEY=YOUR_COINMARKETCAP_API_KEY

# ELITE Mempool Monitoring Configuration
ELITE_MEMPOOL_MONITORING_ENABLED=true
ELITE_MEMPOOL_REAL_TIME_UPDATES=true
ELITE_MEMPOOL_GAS_TRACKING=true
ELITE_MEMPOOL_THREAT_DETECTION=true
ELITE_MEMPOOL_MEV_DETECTION=true
ELITE_MEMPOOL_MAX_TRANSACTIONS=10000
ELITE_MEMPOOL_SCAN_INTERVAL=100
ELITE_MEMPOOL_ALERT_THRESHOLD=high

# ELITE Security Configuration
ELITE_ENABLE_ENCRYPTION=true
ELITE_ENABLE_AUDIT_LOGGING=true
ELITE_MAX_REQUEST_SIZE=10485760
ELITE_SESSION_TIMEOUT=3600
