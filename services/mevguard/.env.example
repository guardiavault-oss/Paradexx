# MEV Protection Service Environment Configuration
# Copy this file to .env and configure your settings

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/mev_protection
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_POOL_SIZE=20

# Blockchain RPC URLs
ETHEREUM_RPC_URL=https://eth-mainnet.alchemyapi.io/v2/YOUR_KEY
POLYGON_RPC_URL=https://polygon-rpc.com
BSC_RPC_URL=https://bsc-dataseed.binance.org
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc
OPTIMISM_RPC_URL=https://mainnet.optimism.io
AVALANCHE_RPC_URL=https://api.avax.network/ext/bc/C/rpc
FANTOM_RPC_URL=https://rpc.ftm.tools
BASE_RPC_URL=https://mainnet.base.org
LINEA_RPC_URL=https://rpc.linea.build
SCROLL_RPC_URL=https://rpc.scroll.io

# API Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=1
RELOAD=false

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
API_KEY=your-api-key-change-this-in-production
ENCRYPTION_KEY=your-encryption-key-32-bytes-long

# Protection Settings
DEFAULT_PROTECTION_LEVEL=high
ENABLE_PRIVATE_MEMPOOL=true
MAX_GAS_PRICE_GWEI=100
MIN_PROFIT_THRESHOLD=0.01
SLIPPAGE_TOLERANCE=0.5
DEADLINE_MINUTES=20

# AI/ML Settings
ENABLE_ML_DETECTION=true
ENABLE_BEHAVIORAL_ANALYSIS=true
ENABLE_PREDICTIVE_ANALYTICS=true
MODEL_UPDATE_INTERVAL=3600

# Monitoring Settings
REFRESH_RATE=1000
BATCH_SIZE=100
MAX_THREATS=10000
RETENTION_HOURS=24

# Performance Settings
MAX_CPU_USAGE=80.0
MAX_MEMORY_USAGE=80.0
ENABLE_AUTO_SCALING=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/var/log/mev-protection.log

# External Services
FLASHBOTS_API_URL=https://relay.flashbots.net
EDEN_NETWORK_API_URL=https://api.edennetwork.io
MEV_BOOST_API_URL=https://0xac6e77dfe25ecd6110b8e780608cce0dab71fdd5ebea22a16c0205200f2f8e5e3ad3ab71d73e8a4a72034503f89453d647483f846a6633607abf0888e745be@boost-relay.flashbots.net

# Private Mempool Integration
PRIVATE_MEMPOOL_ENABLED=true
PRIVATE_MEMPOOL_TIMEOUT=30
PRIVATE_MEMPOOL_RETRIES=3

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600

# CORS Settings
CORS_ORIGINS=*
CORS_CREDENTIALS=true
CORS_METHODS=*
CORS_HEADERS=*

# Trusted Hosts
TRUSTED_HOSTS=*

# SSL/TLS
SSL_CERT_PATH=
SSL_KEY_PATH=
SSL_CA_PATH=

# Health Check
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# Metrics
ENABLE_METRICS=true
METRICS_PORT=9090
METRICS_PATH=/metrics

# Alerting
ENABLE_ALERTS=true
ALERT_WEBHOOK_URL=
ALERT_EMAIL_SMTP_HOST=
ALERT_EMAIL_SMTP_PORT=587
ALERT_EMAIL_USERNAME=
ALERT_EMAIL_PASSWORD=
ALERT_EMAIL_FROM=
ALERT_EMAIL_TO=

# Backup
BACKUP_ENABLED=true
BACKUP_INTERVAL=3600
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=
BACKUP_S3_ACCESS_KEY=
BACKUP_S3_SECRET_KEY=

# Development
DEBUG=false
TESTING=false
MOCK_BLOCKCHAIN=false