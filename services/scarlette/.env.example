# Scarlette AI Service Configuration

# Service Configuration
SCARLETTE_MODEL_PATH=./models/scarlette
LOG_LEVEL=info
DEBUG=false

# AI Model Configuration
USE_OPENAI=false
USE_HUGGINGFACE=false

# OpenAI Configuration (if enabled)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=500

# HuggingFace Configuration (if enabled)  
HF_MODEL_NAME=microsoft/DialoGPT-medium
HF_CACHE_DIR=./models/huggingface

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=scarlette_redis_2024
REDIS_DB=0

# Database Configuration (if needed)
# DATABASE_URL=postgresql://user:password@localhost:5432/scarlette_ai

# Security Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-here
API_SECRET_KEY=your-api-secret-key-here
ALLOWED_HOSTS=*

# Blockchain Configuration (optional)
ETHEREUM_RPC_URL=https://eth-mainnet.alchemyapi.io/v2/your-key
POLYGON_RPC_URL=https://polygon-mainnet.alchemyapi.io/v2/your-key
BSC_RPC_URL=https://bsc-dataseed.binance.org/
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc

# Performance Configuration
MAX_WORKERS=4
WORKER_TIMEOUT=30
MAX_REQUEST_SIZE=10485760  # 10MB

# Monitoring and Observability
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_TRACING=false
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=20

# Caching
CACHE_TTL=3600  # 1 hour
ENABLE_RESPONSE_CACHING=true

# Session Management
SESSION_TIMEOUT=3600  # 1 hour
MAX_SESSIONS_PER_USER=5

# File Upload
MAX_FILE_SIZE=50485760  # 50MB
ALLOWED_FILE_TYPES=.txt,.json,.sol,.py

# External Services
ENABLE_EXTERNAL_APIS=true
API_TIMEOUT=30

# Development Settings
RELOAD=false
ACCESS_LOG=true