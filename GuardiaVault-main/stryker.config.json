{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "_comment": "Stryker Mutation Testing Configuration for GuardiaVault",
  "packageManager": "npm",
  "reporters": ["html", "clear-text", "progress", "json"],
  "testRunner": "vitest",
  "coverageAnalysis": "perTest",
  "mutate": [
    "server/services/**/*.ts",
    "server/middleware/**/*.ts",
    "client/src/hooks/**/*.ts",
    "client/src/lib/**/*.ts",
    "!**/*.test.ts",
    "!**/*.spec.ts",
    "!**/*.d.ts",
    "!**/node_modules/**"
  ],
  "thresholds": {
    "high": 80,
    "low": 60,
    "break": 50
  },
  "timeoutMS": 60000,
  "timeoutFactor": 2,
  "maxConcurrentTestRunners": 2,
  "ignorePatterns": [
    "**/node_modules/**",
    "**/dist/**",
    "**/coverage/**",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "incremental": true,
  "incrementalFile": ".stryker-tmp/incremental.json",
  "htmlReporter": {
    "fileName": "tests/mutation/reports/mutation-report.html"
  },
  "jsonReporter": {
    "fileName": "tests/mutation/reports/mutation-report.json"
  }
}
