{
  "name": "guardiavault-mobile",
  "version": "1.0.0",
  "private": true,
  "main": "index.js",
  "scripts": {
    "start": "npx expo start",
    "android": "npx expo run:android",
    "ios": "npx expo run:ios",
    "web": "npx expo start --web",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts,.tsx"
  },
  "dependencies": {
    "@expo/vector-icons": "^14.0.0",
    "@react-native-async-storage/async-storage": "1.23.1",
    "@react-native-community/netinfo": "11.3.1",
    "@react-navigation/bottom-tabs": "^6.6.1",
    "@react-navigation/native": "^6.1.18",
    "@react-navigation/native-stack": "^6.11.0",
    "@tanstack/react-query": "^5.60.5",
    "@walletconnect/types": "^2.18.0",
    "@walletconnect/universal-provider": "^2.18.0",
    "ethers": "^6.15.0",
    "expo": "~51.0.28",
    "expo-constants": "~16.0.0",
    "expo-crypto": "~13.0.0",
    "expo-linking": "~6.3.0",
    "expo-local-authentication": "~14.0.0",
    "expo-notifications": "~0.28.0",
    "expo-secure-store": "~13.0.0",
    "expo-status-bar": "~1.12.1",
    "react": "18.2.0",
    "react-native": "0.74.5",
    "react-native-gesture-handler": "~2.16.1",
    "react-native-reanimated": "~3.10.1",
    "react-native-safe-area-context": "4.10.5",
    "react-native-screens": "~3.31.0",
    "react-native-svg": "15.2.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@expo/cli": "^0.21.0",
    "@expo/metro-config": "~0.18.11",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^12.8.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.14",
    "@types/react": "~18.2.79",
    "@types/react-native": "^0.73.0",
    "@typescript-eslint/eslint-plugin": "^8.19.0",
    "@typescript-eslint/parser": "^8.19.0",
    "babel-plugin-module-resolver": "^5.0.0",
    "eslint": "^9.17.0",
    "jest": "^29.7.0",
    "jest-expo": "~51.0.0",
    "metro": "^0.80.0",
    "metro-runtime": "^0.83.3",
    "react-test-renderer": "18.2.0",
    "typescript": "~5.3.3"
  },
  "jest": {
    "preset": "jest-expo",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.ts"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!((jest-)?react-native|@react-native(-community)?)|expo(nent)?|@expo(nent)?/.*|@expo-google-fonts/.*|react-navigation|@react-navigation/.*|@unimodules/.*|unimodules|sentry-expo|native-base|react-native-svg|@walletconnect/.*)"
    ],
    "moduleNameMapper": {
      "^@shared/(.*)$": "<rootDir>/../shared/$1",
      "^@/(.*)$": "<rootDir>/../client/src/$1"
    },
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/*.test.{ts,tsx}",
      "!**/node_modules/**",
      "!**/tests/**"
    ]
  }
}
