{
  "name": "guardiavault-backend",
  "version": "1.0.0",
  "description": "GuardiaVault Backend API",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch server.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/server.js",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "postinstall": "prisma generate",
    "test:api": "tsx scripts/test-api-connections.ts",
    "test:trading": "tsx scripts/test-trading.ts",
    "test:vault": "tsx scripts/test-vault-setup.ts",
    "test:vault:complete": "tsx scripts/test-vault-complete.ts",
    "setup:db": "powershell -ExecutionPolicy Bypass -File scripts/setup-database.ps1",
    "get-token": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/register-and-login.ps1",
    "test:integration": "tsx scripts/integration-test.ts",
    "test:all-services": "tsx scripts/test-all-services.ts",
    "test:stripe": "tsx scripts/test-stripe-integration.ts",
    "test:wallet-guard": "tsx scripts/test-wallet-guard.ts",
    "test:wallet-guard-integration": "tsx scripts/test-wallet-guard-integration.ts",
    "test:all": "npm run test:api && npm run test:trading && npm run test:vault",
    "seed:test-data": "tsx scripts/seed-test-data.ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio"
  },
  "dependencies": {
    "@prisma/client": "^5.0.0",
    "@simplewebauthn/server": "^13.2.2",
    "@types/ws": "^8.18.1",
    "axios": "^1.6.2",
    "bcrypt": "^6.0.0",
    "bullmq": "^5.64.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ethers": "^6.15.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "google-auth-library": "^9.4.1",
    "helmet": "^7.1.0",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.11",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "resend": "^6.5.2",
    "shamir-secret-sharing": "^0.0.4",
    "stripe": "^14.21.0",
    "stripe-replit-sync": "^1.0.0",
    "winston": "^3.11.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.25",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.10.0",
    "@types/nodemailer": "^7.0.4",
    "@types/pg": "^8.15.6",
    "prisma": "^5.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}