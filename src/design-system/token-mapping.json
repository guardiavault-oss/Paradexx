{
  "version": "1.0.0",
  "description": "Token migration mapping from OLD system to NEW Paradox Wallet design system",
  "lastUpdated": "2024-12-04",
  
  "typescript": {
    "description": "TypeScript/JavaScript token imports and usage",
    "imports": {
      "old": [
        "import { colors } from '@/styles/tokens/colors'",
        "import { effects } from '@/styles/tokens/effects'",
        "import { typography } from '@/styles/tokens/typography'",
        "import * from '@/styles/tokens'"
      ],
      "new": [
        "import { palette, colors, modeColors, typography, spacing, radius, shadows, blur, transitions } from '@/design-system/tokens'",
        "import { getAccentColor, getGradient, getGlow } from '@/design-system/tokens'"
      ]
    },
    "tokens": {
      "colors.bg.base": "colors.background.primary",
      "colors.bg.surface": "colors.surface.base",
      "colors.bg.elevated": "colors.surface.elevated",
      "colors.bg.overlay": "colors.background.overlay",
      "colors.bg.glass": "colors.background.glass.medium",
      "colors.bg.glass.light": "colors.background.glass.subtle",
      "colors.bg.glass.medium": "colors.background.glass.medium",
      "colors.bg.glass.heavy": "colors.background.glass.strong",
      
      "colors.degen.primary": "palette.degen.primary",
      "colors.degen.secondary": "palette.degen.secondary",
      "colors.degen.accent": "palette.degen.tertiary",
      "colors.degen.dark": "palette.degen.dark",
      "colors.degen.glow": "modeColors.degen.glow.normal",
      
      "colors.regen.primary": "palette.regen.primary",
      "colors.regen.secondary": "palette.regen.secondary",
      "colors.regen.accent": "palette.regen.tertiary",
      "colors.regen.dark": "palette.regen.dark",
      "colors.regen.glow": "modeColors.regen.glow.normal",
      
      "colors.text.primary": "colors.text.primary",
      "colors.text.secondary": "colors.text.secondary",
      "colors.text.muted": "colors.text.muted",
      "colors.text.disabled": "colors.text.muted",
      
      "colors.border.default": "colors.border.subtle",
      "colors.border.medium": "colors.border.normal",
      "colors.border.strong": "colors.border.strong",
      "colors.border.focus": "colors.border.focus",
      
      "colors.neutral[50]": "palette.neutral[50]",
      "colors.neutral[100]": "palette.neutral[100]",
      "colors.neutral[200]": "palette.neutral[200]",
      "colors.neutral[300]": "palette.neutral[300]",
      "colors.neutral[400]": "palette.neutral[400]",
      "colors.neutral[500]": "palette.neutral[500]",
      "colors.neutral[600]": "palette.neutral[600]",
      "colors.neutral[700]": "palette.neutral[700]",
      "colors.neutral[800]": "palette.neutral[800]",
      "colors.neutral[900]": "palette.neutral[900]",
      
      "effects.glass.subtle": "colors.background.glass.subtle",
      "effects.glass.medium": "colors.background.glass.medium",
      "effects.glass.strong": "colors.background.glass.strong",
      "effects.blur.sm": "blur.sm",
      "effects.blur.md": "blur.md",
      "effects.blur.lg": "blur.lg",
      "effects.shadow.sm": "shadows.sm",
      "effects.shadow.md": "shadows.md",
      "effects.shadow.lg": "shadows.lg",
      "effects.glow.degen": "shadows.glow.degen.md",
      "effects.glow.regen": "shadows.glow.regen.md",
      
      "typography.font.primary": "typography.fontFamily.primary",
      "typography.font.mono": "typography.fontFamily.mono",
      "typography.size.hero": "typography.fontSize.hero",
      "typography.size.title": "typography.fontSize.title",
      "typography.size.heading": "typography.fontSize.heading",
      "typography.size.body": "typography.fontSize.body",
      "typography.size.small": "typography.fontSize.small",
      "typography.weight.black": "typography.fontWeight.black",
      "typography.weight.bold": "typography.fontWeight.bold",
      "typography.weight.semibold": "typography.fontWeight.semibold",
      "typography.weight.medium": "typography.fontWeight.medium",
      "typography.weight.normal": "typography.fontWeight.normal"
    },
    "utilityFunctions": {
      "getDegenColor()": "getAccentColor('degen', 'primary')",
      "getRegenColor()": "getAccentColor('regen', 'primary')",
      "getDegenGradient()": "getGradient('degen', 'primary')",
      "getRegenGradient()": "getGradient('regen', 'primary')",
      "getDegenGlow()": "getGlow('degen', 'md')",
      "getRegenGlow()": "getGlow('regen', 'md')"
    }
  },
  
  "cssVariables": {
    "description": "CSS custom properties (CSS variables)",
    "mapping": {
      "--bg-base": "--bg-primary",
      "--bg-surface": "--bg-glass-medium",
      "--bg-elevated": "--bg-secondary",
      "--bg-overlay": "--bg-overlay",
      
      "--degen-primary": "--degen-primary",
      "--degen-secondary": "--degen-secondary",
      "--degen-accent": "--degen-tertiary",
      
      "--regen-primary": "--regen-primary",
      "--regen-secondary": "--regen-secondary",
      "--regen-accent": "--regen-tertiary",
      
      "--text-primary": "--text-primary",
      "--text-secondary": "--text-secondary",
      "--text-muted": "--text-muted",
      "--text-disabled": "--text-muted",
      
      "--border-default": "--border-subtle",
      "--border-medium": "--border-normal",
      "--border-strong": "--border-strong",
      
      "--glass-subtle": "--bg-glass-subtle",
      "--glass-medium": "--bg-glass-medium",
      "--glass-strong": "--bg-glass-strong",
      
      "--blur-sm": "--blur-sm",
      "--blur-md": "--blur-md",
      "--blur-lg": "--blur-lg",
      
      "--shadow-sm": "--shadow-sm",
      "--shadow-md": "--shadow-md",
      "--shadow-lg": "--shadow-lg",
      
      "--radius-sm": "--radius-sm",
      "--radius-md": "--radius-md",
      "--radius-lg": "--radius-lg",
      "--radius-xl": "--radius-xl",
      "--radius-2xl": "--radius-2xl",
      
      "--transition-fast": "--transition-fast",
      "--transition-normal": "--transition-normal",
      "--transition-slow": "--transition-slow",
      
      "--spacing-card": "--spacing-card",
      "--spacing-section": "--spacing-section",
      
      "--font-primary": "--font-primary",
      "--font-mono": "--font-mono"
    }
  },
  
  "cssClasses": {
    "description": "CSS utility class mappings",
    "mapping": {
      ".glass-light": ".glass-subtle",
      ".glass-default": ".glass-medium",
      ".glass-heavy": ".glass-strong",
      ".glass-accent-border": ".glass-accent",
      
      ".btn-degen": ".btn-primary[data-mode='degen']",
      ".btn-regen": ".btn-primary[data-mode='regen']",
      ".btn-outline": ".btn-secondary",
      ".btn-transparent": ".btn-ghost",
      
      ".text-gradient-degen": ".text-gradient",
      ".text-gradient-regen": ".text-gradient",
      ".text-glow-white": ".text-glow",
      ".text-shadow-3d-degen": ".text-3d-degen",
      ".text-shadow-3d-regen": ".text-3d-regen",
      
      ".animate-glow": ".animate-pulse-glow",
      ".animate-gradient-shift": ".animate-gradient",
      ".fade-in-up": ".slide-up",
      
      ".container-max": ".container-center",
      ".section-padding": ".section-spacing"
    }
  },
  
  "inlineStyles": {
    "description": "Common inline style patterns to replace",
    "mapping": {
      "backgroundColor: 'rgba(0, 0, 0, 0.95)'": "backgroundColor: colors.background.primary",
      "backgroundColor: 'rgba(0, 0, 0, 0.8)'": "backgroundColor: colors.background.secondary",
      "backgroundColor: 'rgba(0, 0, 0, 0.4)'": "backgroundColor: colors.background.glass.subtle",
      "backgroundColor: 'rgba(0, 0, 0, 0.6)'": "backgroundColor: colors.background.glass.medium",
      
      "color: '#ff3366'": "color: palette.degen.primary",
      "color: '#ff9500'": "color: palette.degen.secondary",
      "color: '#00d4ff'": "color: palette.regen.primary",
      "color: '#00ff88'": "color: palette.regen.secondary",
      "color: '#ffffff'": "color: colors.text.primary",
      "color: 'rgba(255, 255, 255, 0.7)'": "color: colors.text.secondary",
      "color: 'rgba(255, 255, 255, 0.6)'": "color: colors.text.tertiary",
      "color: 'rgba(255, 255, 255, 0.4)'": "color: colors.text.muted",
      
      "border: '1px solid rgba(255, 255, 255, 0.1)'": "border: `1px solid ${colors.border.subtle}`",
      "border: '1px solid rgba(255, 255, 255, 0.2)'": "border: `1px solid ${colors.border.normal}`",
      "borderColor: 'rgba(255, 255, 255, 0.1)'": "borderColor: colors.border.subtle",
      "borderColor: 'rgba(255, 255, 255, 0.2)'": "borderColor: colors.border.normal",
      
      "backdropFilter: 'blur(20px)'": "backdropFilter: `blur(${blur.md})`",
      "backdropFilter: 'blur(40px)'": "backdropFilter: `blur(${blur.lg})`",
      
      "boxShadow: '0 20px 60px rgba(0, 0, 0, 0.5)'": "boxShadow: shadows.md",
      "borderRadius: '24px'": "borderRadius: radius.xl",
      "borderRadius: '16px'": "borderRadius: radius.lg",
      "borderRadius: '12px'": "borderRadius: radius.md"
    }
  },
  
  "gradients": {
    "description": "Gradient pattern replacements",
    "degen": {
      "linear-gradient(90deg, #ff3366, #ff9500)": "modeColors.degen.gradient.primary",
      "linear-gradient(135deg, #ff3366, #ff6b6b, #ff3366)": "modeColors.degen.gradient.button",
      "linear-gradient(135deg, rgba(255, 51, 102, 0.1), rgba(255, 107, 107, 0.05))": "modeColors.degen.gradient.background",
      "radial-gradient(circle at top left, rgba(255, 51, 102, 0.15) 0%, rgba(0, 0, 0, 0.95) 50%)": "modeColors.degen.gradient.radial"
    },
    "regen": {
      "linear-gradient(90deg, #00d4ff, #00ff88)": "modeColors.regen.gradient.primary",
      "linear-gradient(135deg, #00d4ff, #00ff88, #00d4ff)": "modeColors.regen.gradient.button",
      "linear-gradient(135deg, rgba(0, 212, 255, 0.1), rgba(0, 255, 136, 0.05))": "modeColors.regen.gradient.background",
      "radial-gradient(circle at top right, rgba(0, 212, 255, 0.15) 0%, rgba(0, 0, 0, 0.95) 50%)": "modeColors.regen.gradient.radial"
    }
  },
  
  "componentProps": {
    "description": "Component prop migrations",
    "GlassCard": {
      "old": {
        "variant": ["light", "medium", "heavy"],
        "glow": "boolean"
      },
      "new": {
        "intensity": ["subtle", "medium", "strong"],
        "accentBorder": "boolean"
      },
      "mapping": {
        "variant='light'": "intensity='subtle'",
        "variant='medium'": "intensity='medium'",
        "variant='heavy'": "intensity='strong'",
        "glow={true}": "accentBorder={true}"
      }
    }
  },
  
  "colorValues": {
    "description": "Direct color value replacements (hex and rgba)",
    "hex": {
      "#ff3333": "#ff3366",
      "#ff0000": "#ff3366",
      "#ff6b6b": "#ff6b6b",
      "#ff9500": "#ff9500",
      "#00aaff": "#00d4ff",
      "#3399ff": "#00d4ff",
      "#0066ff": "#00d4ff",
      "#00ff88": "#00ff88",
      "#ffffff": "#ffffff",
      "#000000": "#000000"
    },
    "rgba": {
      "rgba(255, 51, 51,": "rgba(255, 51, 102,",
      "rgba(255, 0, 0,": "rgba(255, 51, 102,",
      "rgba(0, 170, 255,": "rgba(0, 212, 255,",
      "rgba(51, 153, 255,": "rgba(0, 212, 255,",
      "rgba(0, 102, 255,": "rgba(0, 212, 255,"
    }
  },
  
  "deprecatedPatterns": {
    "description": "Patterns to avoid - use new alternatives",
    "avoid": [
      {
        "pattern": "hardcoded rgba(0, 0, 0, 0.95)",
        "replacement": "colors.background.primary",
        "reason": "Use semantic tokens instead of hardcoded values"
      },
      {
        "pattern": "multiple similar colors (#ff3333, #ff0000, #ff3366)",
        "replacement": "palette.degen.primary",
        "reason": "Consolidated to single primary color"
      },
      {
        "pattern": "inline style={{ backdropFilter: 'blur(20px)' }}",
        "replacement": "className='glass-medium'",
        "reason": "Use utility classes for common patterns"
      },
      {
        "pattern": "if (mode === 'degen') color = '#ff3366'",
        "replacement": "getAccentColor(mode, 'primary')",
        "reason": "Use utility functions for mode-aware colors"
      }
    ]
  }
}
